<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th>
        </th>

        <th>
        </th>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <% if a_user.private? %>
            <%= "Yes" %>
          <% else %>
            <%= "No" %>
          <% end %>
        </td>
        <td>
          <% if @the_follow_request.status == "accepted" %>
            <a href="/delete_follow_request/<%= a_user.id %>">
          <% end %>
        </td>

        <td>
         <a href="users/<%= a_user.username %>">Show details</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
